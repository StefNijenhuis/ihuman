div class="row"
  div class="col-md-12 column"

  = form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f|

    = image_tag("ihuman-logo-trans.png")
    hr

    = f.email_field :email, autofocus: true, placeholder: "E-mailadres", class: "form-control", type: "email"

    = f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Wachtwoord"

    / - if devise_mapping.rememberable?
    /   .field
    /     = f.check_box :remember_me
    /     = f.label :remember_me

    = link_to "Uw wachtwoord vergeten?", new_password_path(resource_name)

    .actions
        / = f.button "Inloggen", class: "btn btn-lg btn-primary btn-block", type: "submit"
        = f.submit "Inloggen", class: "btn btn-lg btn-primary btn-block"
    hr

    h6[style="color:white; margin-left:30%"] Copyright &copy iHuman 2015

= render "devise/shared/links"
